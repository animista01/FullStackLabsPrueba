<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.role_id == 1 %>
    <div class="field">
      <%= f.label :costumer_message %><br>
      <%= f.text_area :costumer_message %>
    </div>
  <% elsif current_user.role_id == 2 %>
    <div class="field">
      <%= f.label :support_agent_response %><br>
      <%= f.text_area :support_agent_response %>
    </div>
    <div class="field">
      <%= f.label :status %><br>
      <%= f.check_box :status %>
    </div>
    <div class="field">
      <%= f.label :closed_at %><br>
      <%= f.datetime_select :closed_at %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Costumer message</th>
      <th>Costumer</th>
      <th>Support agent response</th>
      <th>Support agent</th>
      <th>Status</th>
      <th>Closed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.costumer_message %></td>
        <td><%= ticket.costumer_id %></td>
        <td><%= ticket.support_agent_response %></td>
        <td><%= ticket.support_agent_id %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.closed_at %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

